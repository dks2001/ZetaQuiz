<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dheerendrakumar.quiz">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Quiz">
        <activity android:name=".AllUserComments"></activity>
        <activity android:name=".QuestionsFeed" />
        <activity android:name=".VocabQuizActivity" />
        <activity android:name=".VocabularyActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".DailyQuizActivity" />
        <activity android:name=".TrueFalseActivity" />
        <activity android:name=".QuizActivity" />
        <activity android:name=".SpecificationsActivity" />
        <activity android:name=".LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>